@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/x-icon" href="~/images/skoruba-icon.png" />
    <link rel="shortcut icon" type="image/x-icon" href="~/images/skoruba-icon.png" />

    <title>@Localizer["PageTitle"]</title>

    <link href="~/dist/css/bundle.min.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/dist/css/web.min.css" asp-append-version="true" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-sm-12 col-md-6">
                <div class="card-deck mb-3 mt-5 text-center">
                    <div class="card mb-2 box-shadow">
                        <div class="card-header">
                            <h4 class="my-0 font-weight-normal">@Localizer["PageTitle"]</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title">
                                <span class="oi oi-circle-x" title="Warning" aria-hidden="true"></span>
                            </h1>
                            <a href="" class="btn btn-lg btn-block btn-danger">@Localizer["ReturnToIdentityServer"]</a>
                            <a asp-controller="Account" asp-area="AdminUI" asp-action="Logout" class="btn btn-lg btn-block btn-danger">@Localizer["Logout"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/dist/js/bundle.min.js" asp-append-version="true"></script>
</body>
</html>