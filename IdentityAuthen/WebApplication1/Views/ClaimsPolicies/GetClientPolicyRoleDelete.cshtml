@using Authen.Models
@using AuthenApi.Common
@using AuthenApi.Dtos.Grant
@using AuthenApi.Helpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


@model ClientsRolesDeleteDto
@inject IViewLocalizer Localizer

@{
    ViewBag.Title = Localizer["PageTitle"];
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="ClaimsPolicies" asp-action="ClientPolicies">@Localizer["NavigationClaimsPolicies"]</a></li>
                @* <li class="breadcrumb-item active" aria-current="page">@Model.ClientId</li> *@
            </ol>
        </nav>
    </div>

    <div class="col-12">
        <h2>@Localizer["PageTitle"]</h2>
    </div>
</div>

<form asp-action="ClientPolicy" method="post" id="identity-resource-form">

    @* 	<div asp-validation-summary="All" class="text-danger"></div>
 *@
    <!--Hidden -->
    <input type="hidden" asp-for="Id" />

    <div class="card mt-3">
        <h5 class="card-header">@Localizer["PanelTitle"]</h5>
        <div class="card-body">
                 <input type="hidden" asp-for="ClaimPolicyId" />

                <div class="form-group row">
                  <label asp-for="ClientName" class="col-sm-3 col-form-label">
                          </label>
                    <div class="col-sm-3">
                        <input asp-for="ClientName" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                  <label asp-for="RoleName" class="col-sm-3 col-form-label">
                          </label>
                    <div class="col-sm-3">
                        <input asp-for="RoleName" readonly class="form-control" />
                    </div>
                </div>

              <div class="form-group row">
                 <div class="col-sm-9 text-center">
                     <button type="submit" asp-action="ClientPolicyRoleDelete" id="identity-resource-de-button" class="btn btn-danger">@Localizer["ButtonDelete"]</button>
                 </div>
              </div>
        </div>
    </div>

</form>

@section scripts
{
    <script>
        $(function () {

            //Disable enter for this form
            FormMvc.disableEnter($('#identity-resource-form'));
        });
    </script>
}